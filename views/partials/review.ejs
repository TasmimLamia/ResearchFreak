<div class="d-flex align-items-center mt-sm-n1 pt-4 mb-0 mb-lg-1 mb-xl-3">
    <i class="ai-star text-primary lead pe-1 me-2"></i>
    <h3 class="h4 mb-0">Rating & Review</h3>
</div>
<% if (researcher.RevieweeStatus == false) { %>
<form
    class="modal-body pt-0"
    action="/profile/review/<%= researcher.id %>"
    method="POST"
>
    <div class="row g-3 g-sm-4 mt-0 mt-lg-2">
        <div class="col-sm-12">
            <label class="form-label" for="rating">Add Rating</label>
            <input
                class="form-control mb-0 me-3"
                name="rating"
                type="text"
                placeholder="rating out of 5"
            />
        </div>
        <div class="col-sm-12">
            <label class="form-label" for="review">Add Review</label>
            <textarea
                class="form-control"
                rows="3"
                name="review"
                placeholder="Add a review"
            ></textarea>
        </div>
    </div>
    <div class="col-12 d-flex pt-3">
        <button
            class="btn btn-sm btn-outline-secondary w-100 w-md-auto"
            type="submit"
        >
            Leave a review
        </button>
    </div>
</form>
<% } %>
<div class="row g-3 g-sm-4 mt-0 mt-lg-2">
    <div class="col-sm-12">
        <button
            class="btn btn-sm btn-outline-primary w-100 w-md-auto"
            type="button"
        >
            <i class="ai-star me-2 ms-n1"></i>Rating: <%= researcher.Rating %>/5
        </button>
    </div>
</div>
<% researcher.Review.forEach(function(aReview){ %>
<div class="row g-3 g-sm-4 mt-0 mt-lg-2">
    <div class="col-sm-12">
        <a class="form-label" href="/profile/<%= aReview.reviewerUsers.id %>"
            ><%= aReview.reviewerUsers.username %></a
        >
        <div class="form-control mb-0 me-3" name="reviewer">
            <%= aReview.review %>
        </div>
    </div>
</div>
<% }) %>
