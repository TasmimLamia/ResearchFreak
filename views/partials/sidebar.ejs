<div class="position-lg-sticky top-0">
    <div class="d-none d-lg-block" style="padding-top: 105px"></div>
    <div class="offcanvas-lg offcanvas-start" id="sidebarAccount">
        <button
            class="btn-close position-absolute top-0 end-0 mt-3 me-3 d-lg-none"
            type="button"
            data-bs-dismiss="offcanvas"
            data-bs-target="#sidebarAccount"
        ></button>
        <div class="offcanvas-body">
            <div class="pb-2 pb-lg-0 mb-4 mb-lg-5">
                <img
                    class="d-block rounded-circle mb-2"
                    src="/assets/img/pics/<%= researcher.pic %>"
                    width="80"
                />
                <h3 class="h5 mb-1"><%= researcher.username %></h3>
                <!-- <p class="fs-sm text-muted mb-0">
                                                bocouse@example.com
                                            </p> -->
            </div>
            <nav class="nav flex-column pb-2 pb-lg-4 mb-3">
                <table class="table mb-0">
                    <tbody>
                        <tr>
                            <td class="border-0 text-muted py-2 px-0">
                                Website
                            </td>
                            <td
                                class="col-md-10 col-lg-8 border-0 text-dark fw-medium py-2"
                            >
                                <%= researcher.website %>
                            </td>
                        </tr>
                        <tr>
                            <td class="border-0 text-muted py-2 px-0">
                                Social-media
                            </td>
                            <td
                                class="col-md-10 col-lg-8 border-0 text-dark fw-medium py-2"
                            >
                                <%= researcher.socialmedia %>
                            </td>
                        </tr>
                        <tr>
                            <td class="border-0 text-muted py-2 px-0">
                                Gender
                            </td>
                            <td
                                class="col-md-10 col-lg-8 border-0 text-dark fw-medium py-2"
                            >
                                <%= researcher.gender %>
                            </td>
                        </tr>
                        <tr>
                            <td class="border-0 text-muted py-2 px-0">
                                Country
                            </td>
                            <td
                                class="col-md-10 col-lg-8 border-0 text-dark fw-medium py-2"
                            >
                                <%= researcher.country %>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </nav>
            <%- include('review'); %>
        </div>
    </div>
</div>
