<div
    class="modal fade"
    id="researchCreateModal"
    tabindex="-1"
    role="dialog"
    data-focus-input="#"
>
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h4 class="modal-title">Add Research Work</h4>
                <button
                    class="btn-close"
                    type="button"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                ></button>
            </div>
            <form
                class="modal-body pt-0"
                action="/profile/research"
                method="POST"
            >
                <div class="row g-3 g-sm-4 mt-0 mt-lg-2">
                    <div class="col-sm-12">
                        <label class="form-label" for="title">Title</label>
                        <input
                            class="form-control mb-0 me-3"
                            name="title"
                            type="text"
                            required
                        />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" for="year">Year</label>
                        <input
                            class="form-control mb-0 me-3"
                            name="year"
                            type="text"
                            required
                        />
                    </div>

                    <div class="col-sm-6">
                        <label class="form-label" for="link">Link</label>
                        <input
                            class="form-control"
                            name="link"
                            type="text"
                            required
                        />
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-center pt-3">
                    <button class="btn btn-primary ms-3" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
